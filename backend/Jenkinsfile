pipeline {
    agent {
        docker {
            image 'gradle:8.4-jdk17'   // Usa imagem do Gradle com JDK 17
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/LeonardoTonon1234/catalogo-filmes-aws-Final.git'
            }
        }

        stage('Build') {
            steps {
                dir('backend') {
                    echo 'üîß Executando build do projeto com Gradle + JDK 17...'
                    sh './gradlew clean build -x test'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('backend') {
                    echo 'üê≥ Construindo imagem Docker...'
                    sh 'docker build -t catalogo-filmes .'
                }
            }
        }

        stage('Run Container') {
            steps {
                echo 'üöÄ Executando container do cat√°logo de filmes...'
                // Para qualquer container anterior e cria um novo na porta 8080
                sh '''
                    docker stop catalogo-filmes || true
                    docker rm catalogo-filmes || true
                    docker run -d -p 8080:8080 --name catalogo-filmes catalogo-filmes
                '''
            }
        }
    }
}
